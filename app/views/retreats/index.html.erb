<div class="row">
  <div class="large-9 columns centered">
    <% @retreats.each do |retreat| %>
     	<h5>Name: <%= retreat.name %></h5>
     	<h5>Spa: <%= retreat.spa.name %></h5>
     	<h5>Spa: <%= retreat.spa.citystate %></h5>
      <h5>Arrival date: <%= retreat.arrival_date.strftime("%B %d, %Y") %></h5>
     	<h5>Registered: <%= retreat.registered %></h5>
      <h5>Confirmed: <%= retreat.confirmed %></h5>
     	<h5>Group rates at: <%= retreat.group_rates_at %></h5>
      <h5>Comp stay at: <%= retreat.comp_stay_at %></h5>
      <%= link_to('view details', retreat_path(retreat.id)) %>
      <hr>
    <% end %> 
	</div>
</div>

