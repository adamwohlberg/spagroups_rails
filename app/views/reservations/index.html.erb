<div class="row">
	<div class="large-12 columns large-centered"></div>
		<h3>Book your <b>all-inclusive spa resort vacation</b></em></h3>
	<div class="large-4 columns large-centered">
<!-- 	<p>1. Location 2. Arrival Date.</p> -->
	<%= form_for @reservation do |f| %>
		<p>
		  Location <%= f.collection_select :spa_id, Spa.order(:name),:id, :name_with_city  %>
		  Arrival date: <%= f.text_field :arrival_date %><br />
		  Your first name: <%= f.text_field :first_name %><br />
		  Email address: <%= f.text_field :email %><br />
		  <%= f.submit "Submit" %>
		</p>
	<% end %>
	</div>
</div> 